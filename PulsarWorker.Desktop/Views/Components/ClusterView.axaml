<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:components="clr-namespace:PulsarWorker.Desktop.ViewModels.Components"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PulsarWorker.Desktop.Views.Components.ClusterView">
    <Design.DataContext>
        <components:ClusterViewModel />
    </Design.DataContext>

    <Border BorderBrush="WhiteSmoke"
            BorderThickness="1"
            CornerRadius="3"
            Background="#333333">
        <StackPanel Margin="2">
            <TextBlock Text="{Binding Name}" FontSize="30" FontWeight="Bold" />
            <TextBlock Text="Type: Cluster" FontSize="20" FontStyle="Italic" FontWeight="Light"
                       FontStretch="SemiExpanded" Padding="10, 2,2,2" />
            <Expander Header="Tenants" HorizontalAlignment="Stretch">
                <ItemsControl ItemsSource="{Binding Tenants}" />
            </Expander>
        </StackPanel>
    </Border>
</UserControl>