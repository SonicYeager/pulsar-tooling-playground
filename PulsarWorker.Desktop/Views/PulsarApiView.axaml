<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:PulsarWorker.Desktop.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PulsarWorker.Desktop.Views.PulsarApiView">

    <Design.DataContext>
        <viewModels:PulsarApiViewModel />
    </Design.DataContext>

    <Grid ColumnDefinitions="2*,3*">

        <StackPanel>
            <TextBlock Text="PulsarNodes"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,5" />

            <ListBox 
                ItemsSource="{Binding Clusters}"
                Selection="{Binding Selection, Mode=TwoWay}"
                SelectionMode="Toggle, Single"/>

        </StackPanel>

        <StackPanel Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Metrics Page coming soon..."
                       FontSize="16"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="10" />
            <!-- TODO add metrics via LiveCharts2 -->
        </StackPanel>
    </Grid>

</UserControl>